{
    "name": "azjezz/psl",
    "description": "PHP Standard Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "azjezz",
            "email": "azjezz@protonmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-sodium": "*"
    },
    "require-dev": {
        "vimeo/psalm": "dev-master",
        "phpunit/phpunit": "^9.0",
        "cedx/coveralls": "dev-main",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Psl\\": "src/Psl"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Psl\\Tests\\": "tests/Psl"
        }
    },
    "scripts": {
        "cs:fix": "phpcbf",
        "cs:check": "phpcs",
        "type:check": "psalm",
        "type:coverage": "psalm --shepherd",
        "test:unit": "phpunit",
        "code:coverage": "coveralls tests/logs/clover.xml",
        "security:analysis": "psalm --taint-analysis",
        "check": [
            "@cs:check",
            "@type:check",
            "@security:analysis",
            "@test:unit"
        ]
    },
    "config": {
        "process-timeout": 1200
    }
}
