{
    "name": "azjezz/psl",
    "description": "PHP Standard Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "azjezz",
            "email": "azjezz@protonmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "symfony/polyfill": "^1.12"
    },
    "require-dev": {
        "vimeo/psalm": "^3.8",
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Psl\\": "src/Psl"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "scripts": {
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run -vvv",
        "type:fix": "psalm --alter --issues=all",
        "type:check": "psalm --debug",
        "type:coverage": "psalm --shepherd",
        "test:unit": "phpunit",
        "code:coverage": "php-coveralls -v"
    }
}
